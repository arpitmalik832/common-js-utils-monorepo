{
  "$schema": "https://raw.githubusercontent.com/release-it/release-it/main/schema/release-it.json",
  "npm": {
    "publish": false,
    "publishPath": "https://npm.pkg.github.com"
  },
  "git": {
    "requireCleanWorkingDir": true,
    "commitMessage": "chore(main): bump package common-js-utils-flow version to ${version}",
    "tagName": "v-common-js-utils-flow-pkg-${version}",
    "pushArgs": ["--follow-tags"],
    "changelog": "pnpx auto-changelog --stdout --commit-limit false --unreleased --template keepachangelog"
  },
  "hooks": {
    "before:init": ["echo 'Starting the release process...'"],
    "after:bump": ["git add ."],
    "after:release": ["echo 'Release process completed successfully.'"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
